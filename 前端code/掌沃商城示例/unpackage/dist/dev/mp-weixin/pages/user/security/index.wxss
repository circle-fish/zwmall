.card-header, .card-header .score, .card-body .account-row {
  display: flex;
  align-items: center;
}
.card-header {
  padding: 30px 0;
}
.card-header .title {
  font-size: 20px;
  color: #333;
  font-weight: bold;
}
.card-header .score {
  margin-left: 15px;
}
.card-header .score .value {
  font-size: 20px;
  font-weight: bold;
}
.card-header .score .unit {
  color: #9d9d9d;
  margin-left: 5px;
}
.card-header .score-slider {
  width: 360px;
  margin-left: 5px;
}
.card-header .score-slider .uni-slider-handle-wrapper {
  height: 4px;
  cursor: default;
}
.card-header .score-slider .uni-slider-handle-wrapper .uni-slider-handle {
  cursor: default;
}
.card-body .account-row {
  padding: 30px 0;
  border-top: 1px solid #e0e0e0;
}
.card-body .account-row .icon {
  width: 40px;
  height: 40px;
  background: url("https://account.xiaomi.com/static/res/b52bef2/account-static/respassport/acc-2014/img/device-icos.png") no-repeat;
}
.card-body .account-row .icon.email {
  background-position: -40px 0;
}
.card-body .account-row .icon.phone {
  background-position: -200px 0;
}
.card-body .account-row .main {
  margin-left: 15px;
}
.card-body .account-row .main .title {
  color: #555;
  font-size: 16px;
  line-height: 1.5;
  font-weight: bold;
}
.card-body .account-row .main .desc {
  color: #9d9d9d;
  line-height: 1.5;
}
.card-body .account-row .btn {
  margin-left: auto;
  color: #555;
  border: 1px solid #e8e8e8;
  padding: 7px 40px;
  background-color: #ffffff;
  cursor: pointer;
  transition: all .2s;
}
.card-body .account-row .btn:hover {
  background-color: #f3f3f4;
}

