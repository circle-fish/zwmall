.card-wrapper {
  width: 660px;
  margin: 80px auto;
  background-color: #ffffff;
}
.card-wrapper .card-wrap {
  width: 332px;
  margin: 0 auto;
  padding-bottom: 20px;
}
.card-wrapper .card-wrap .card-header {
  text-align: center;
}
.card-wrapper .card-wrap .card-header .logo {
  width: 48px;
  height: 48px;
  margin-bottom: 40px;
}
.card-wrapper .card-wrap .card-header .title {
  font-size: 30px;
  color: #333;
  line-height: 1.5;
}
.card-wrapper .card-wrap .card-body {
  display: block;
  margin-top: 22px;
}
.card-wrapper .card-wrap .card-body .form-item {
  height: 45px;
  line-height: 45px;
  margin-bottom: 14px;
  border: 1px solid #e0e0e0;
}
.card-wrapper .card-wrap .card-body .form-item .input {
  flex: 1;
  height: 45px;
  line-height: 45px;
  padding: 0 14px;
  color: #333;
}
.card-wrapper .card-wrap .card-body .form-item .country-code {
  width: 60px;
  height: 45px;
  line-height: 45px;
  color: #333;
  text-align: center;
  border-right: 1px solid #e0e0e0;
}
.card-wrapper .card-wrap .card-body .form-item .btn-send {
  height: 45px;
  line-height: 45px;
  padding: 0 15px;
  color: #003AB5;
  cursor: pointer;
  text-align: center;
  border-left: 1px solid #e0e0e0;
}
.card-wrapper .card-wrap .card-body .form-item .btn-send.disabled {
  cursor: default;
  color: #757575;
}
.card-wrapper .card-wrap .card-body .form-item .btn-primary {
  background-color: #ff6700;
  height: 45px;
  line-height: 45px;
  margin-top: 20px;
  margin-bottom: 14px;
  color: #fff;
  cursor: pointer;
  width: 100%;
}
.card-wrapper .card-wrap .card-body .form-item.border-none {
  border: none;
}
.card-wrapper .card-wrap .card-footer {
  justify-content: flex-end;
  font-size: 12px;
}
.card-wrapper .card-wrap .card-footer .question {
  color: #999;
}
.card-wrapper .card-wrap .card-footer .link {
  color: #ff6700;
}
.copyright {
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
  padding: 10px;
  color: #757575;
  text-align: center;
}

