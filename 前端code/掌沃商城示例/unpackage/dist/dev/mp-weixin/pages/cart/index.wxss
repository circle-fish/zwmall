.cart-wrapper .wrap .cart-footer {
  z-index: 5;
  margin-top: 20px;
  background-color: #ffffff;
  justify-content: space-between;
  height: 48px;
}
.cart-wrapper .wrap .cart-footer.fixed {
  position: fixed;
  bottom: 0;
  width: 1226px;
  margin: 0 auto;
  background-color: #fafafa;
  box-shadow: 0 -3px 6px rgba(0, 0, 0, 0.1);
  -webkit-animation: show .3s forwards;
          animation: show .3s forwards;
}
@-webkit-keyframes show {
from {
    bottom: -100%;
}
to {
    bottom: 0;
}
}
@keyframes show {
from {
    bottom: -100%;
}
to {
    bottom: 0;
}
}
.cart-wrapper .wrap .cart-footer .left {
  color: #757575;
}
.cart-wrapper .wrap .cart-footer .left .shopping-link {
  transition: color .2s;
