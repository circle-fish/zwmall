.cart-wrapper .wrap .cart-main .goods .btn-close {
  width: 100px;
  text-align: center;
}
.cart-wrapper .wrap .cart-main .goods .btn-close .icon {
  color: #757575;
  font-size: 12px;
  font-weight: bold;
  cursor: pointer;
  border-radius: 50%;
  padding: 5px;
