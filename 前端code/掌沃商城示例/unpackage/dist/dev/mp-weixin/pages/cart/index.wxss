}
.cart-wrapper .wrap .cart-footer .left .shopping-link:hover {
  color: #ff6700;
}
.cart-wrapper .wrap .cart-footer .left .delete-link {
  transition: color .2s;
  cursor: pointer;
}
.cart-wrapper .wrap .cart-footer .left .delete-link:hover {
  color: #dd524d;
}
.cart-wrapper .wrap .cart-footer .left .separator {
  border-right: 1px solid #eee;
  height: 18px;
  margin: 0 20px;
}
.cart-wrapper .wrap .cart-footer .left .tips .count {
  color: #ff6700;
  margin: 0 5px;
}
.cart-wrapper .wrap .cart-footer .right {
  position: relative;
}
.cart-wrapper .wrap .cart-footer .right .total-amount {
  color: #ff6700;
}
.cart-wrapper .wrap .cart-footer .right .total-amount .desc {
  margin-left: 2px;
}
.cart-wrapper .wrap .cart-footer .right .total-amount .amount {
  font-size: 28px;
}
.cart-wrapper .wrap .cart-footer .right .btn-primary {
  width: 200px;
  height: 48px;
  line-height: 48px;
  font-size: 18px;
  margin-left: 50px;
  color: #FFFFFF;
  background-color: #ff6700;
}
.cart-wrapper .wrap .cart-footer .right .btn-primary.disabled {
  background: #e0e0e0;
  color: #b0b0b0;
  cursor: not-allowed;
}
.cart-wrapper .wrap .cart-footer .right .btn-primary:hover {
  opacity: .8;
}
.cart-wrapper .wrap .cart-footer .right .nochecked-tip {
  width: 200px;
  height: 48px;
  line-height: 48px;
  position: absolute;
  top: -58px;
  right: 0;
  background-color: #fff;
  border: 1px solid #ff6700;
  color: #ff6700;
  text-align: center;
}
.cart-wrapper .wrap .cart-footer .right .nochecked-tip::before {
  content: '';
  position: absolute;
  bottom: -17px;
  right: 45%;
  border: 8px solid transparent;
  border-top-color: #ff6700;
}
.cart-wrapper .wrap .cart-footer .right .nochecked-tip::after {
  content: '';
  position: absolute;
  bottom: -16px;
  right: 45%;
  border: 8px solid transparent;
  border-top-color: #FFFFFF;
