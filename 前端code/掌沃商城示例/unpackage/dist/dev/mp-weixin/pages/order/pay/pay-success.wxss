.wrapper {
  background-color: #f5f5f5;
  padding: 40px 0 60px;
}
.wrapper .wrap {
  width: 1226px;
  margin: 0 auto;
  display: flex;
  height: 400px;
}
.wrapper .wrap .left {
  width: 506px;
  background-color: #83c44e;
  text-align: center;
}
.wrapper .wrap .left .title {
  font-size: 48px;
  color: #fff;
  line-height: 1;
  margin-top: 70px;
  margin-bottom: 10px;
}
.wrapper .wrap .left .amount {
  margin: 20px 0 30px;
  color: #ffff00;
}
.wrapper .wrap .left .amount .value {
  font-size: 24px;
}
.wrapper .wrap .left .btn-detail {
  margin: 0 auto 42px;
  border: 1px solid #fff;
  background: transparent;
  color: #fff;
  width: 158px;
  height: 38px;
  line-height: 38px;
  text-align: center;
  cursor: pointer;
  transition: all .3s;
}
.wrapper .wrap .left .btn-detail:hover {
  opacity: .8;
}
.wrapper .wrap .left .tips {
  font-size: 12px;
  color: #333;
}
.wrapper .wrap .left .tips text {
  display: block;
}
.wrapper .wrap .right {
  flex: 1;
  background-color: #ffffff;
  padding: 50px 60px;
  position: relative;
}
.wrapper .wrap .right .detail-item {
  line-height: 24px;
  margin-bottom: 8px;
  display: flex;
}
.wrapper .wrap .right .detail-item .name {
  color: #b0b0b0;
}
.wrapper .wrap .right .detail-item .value {
  max-width: 420px;
  max-height: 240px;
  overflow: hidden;
  color: #757575;
}
.wrapper .wrap .right .detail-item .value text {
  display: block;
}
.wrapper .wrap .right .qrcode-wrap {
  width: 94px;
  position: absolute;
  right: 40px;
  bottom: 25px;
  text-align: center;
}
.wrapper .wrap .right .qrcode-wrap .qrcode {
  width: 86px;
  height: 86px;
}
.wrapper .wrap .right .qrcode-wrap .tips {
  margin-top: 5px;
  font-size: 12px;
  color: #333;
}

