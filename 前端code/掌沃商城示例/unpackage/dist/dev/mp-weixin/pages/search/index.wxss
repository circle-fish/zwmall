.search-wrapper .wrap .sort-wrap, .search-wrapper .wrap .sort-wrap .item, .search-wrapper .wrap .goods-wrap .goods .thumbs {
  display: flex;
  align-items: center;
}
.search-wrapper {
  background-color: #f5f5f5;
}
.search-wrapper .wrap {
  width: 1226px;
  margin: 0 auto;
  padding: 20px 0 100px;
  background-color: #f5f5f5;
}
.search-wrapper .wrap .sort-wrap {
  margin: 20px 0;
}
.search-wrapper .wrap .sort-wrap .item {
  padding: 0 30px;
  border-left: 1px solid #e0e0e0;
  line-height: 20px;
}
.search-wrapper .wrap .sort-wrap .item:first-child {
  border-left: none;
}
.search-wrapper .wrap .sort-wrap .item.active .name,
.search-wrapper .wrap .sort-wrap .item.active .icon,
.search-wrapper .wrap .sort-wrap .item:hover .name,
.search-wrapper .wrap .sort-wrap .item:hover .icon {
  color: #ff6700;
}
.search-wrapper .wrap .sort-wrap .item .name {
  color: #424242;
  transition: color .2s;
  cursor: pointer;
}
.search-wrapper .wrap .sort-wrap .item .icon {
  font-size: 20px;
  font-weight: bold;
  color: #424242;
  cursor: pointer;
  transition: -webkit-transform .3s;
  transition: transform .3s;
  transition: transform .3s, -webkit-transform .3s;
}
.search-wrapper .wrap .sort-wrap .item .icon.down {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.search-wrapper .wrap .goods-wrap {
  display: flex;
  flex-wrap: wrap;
  width: 1240px;
}
.search-wrapper .wrap .goods-wrap .goods {
  width: 296px;
  height: 352px;
  padding-top: 42px;
  margin-right: 14px;
  margin-bottom: 14px;
  background-color: #ffffff;
  transition: box-shadow .5s linear;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.search-wrapper .wrap .goods-wrap .goods:hover {
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}
.search-wrapper .wrap .goods-wrap .goods .thumb {
  width: 200px;
  height: 200px;
  cursor: pointer;
  margin-bottom: 16px;
}
.search-wrapper .wrap .goods-wrap .goods .name {
  color: #333;
  width: 230px;
  margin-bottom: 3px;
  font-weight: 400;
  cursor: pointer;
  text-align: center;
}
.search-wrapper .wrap .goods-wrap .goods .price {
  margin-bottom: 15px;
  color: #ff6700;
}
.search-wrapper .wrap .goods-wrap .goods .thumbs .thumb-mini {
  width: 34px;
  height: 34px;
  margin: 0 4px;
  border: 1px solid #e0e0e0;
  cursor: pointer;
  transition: border-color .2s linear;
}
.search-wrapper .wrap .goods-wrap .goods .thumbs .thumb-mini.active, .search-wrapper .wrap .goods-wrap .goods .thumbs .thumb-mini:hover {
  border-color: #ff6700;
}
.search-wrapper .wrap .goods-empty {
  color: #333;
  margin-top: 1rem;
}

