/* 页面宽度 */
.wrapper .wrap .videos {
  display: flex;
  align-items: center;
}
.wrapper {
  background-color: #f5f5f5;
}
.wrapper .wrap {
  width: 1226px;
  margin: 0 auto;
}
.wrapper .wrap .page-title {
  background-color: #ffffff;
  height: 80px;
  line-height: 80px;
  text-indent: 40px;
  color: #424242;
  font-size: 20px;
  font-weight: 400;
}
.wrapper .wrap .videos {
  margin-top: 14px;
  flex-wrap: wrap;
  justify-content: space-between;
}
.wrapper .wrap .videos .video {
  cursor: pointer;
  width: 606px;
  height: 490px;
  margin-bottom: 14px;
  background-color: #ffffff;
  transition: all .2s linear;
}
.wrapper .wrap .videos .video:hover {
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  -webkit-transform: translate3d(0, -2px, 0);
          transform: translate3d(0, -2px, 0);
}
.wrapper .wrap .videos .video .cover-wrap {
  position: relative;
  width: 606px;
  height: 360px;
}
.wrapper .wrap .videos .video .cover-wrap:hover .btn-play {
  background-color: #ff6700;
  border-color: #ff6700;
}
.wrapper .wrap .videos .video .cover-wrap .cover {
  width: 606px;
  height: 360px;
}
.wrapper .wrap .videos .video .cover-wrap .btn-play {
  position: absolute;
  left: 40px;
  bottom: 20px;
  width: 66px;
  height: 44px;
  line-height: 18px;
  border: 2px solid #fff;
  border-radius: 24px;
  transition: all .2s;
  text-align: center;
}
.wrapper .wrap .videos .video .cover-wrap .btn-play .icon {
  color: #fff;
  font-size: 20px;
  line-height: 44px;
}
.wrapper .wrap .videos .video .video-info {
  margin-top: 28px;
  padding-left: 40px;
}
.wrapper .wrap .videos .video .video-info .title {
  font-size: 24px;
  font-weight: 400;
  color: #333;
  line-height: 1.2;
}
.wrapper .wrap .videos .video .video-info .desc {
  margin-top: 10px;
  color: #757575;
}
.wrapper .wrap .video-empty {
  color: #333;
  padding: 3rem 0;
}

