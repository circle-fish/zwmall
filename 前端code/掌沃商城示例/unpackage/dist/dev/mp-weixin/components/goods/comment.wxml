<view class="comment-wrapper"><view class="wrap"><block wx:if="{{scores[0]>0}}"><view class="comment-header"><view class="title">大家认为</view><view class="categories"><block wx:for="{{categories}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{index<6}}"><block><view data-event-opts="{{[['tap',[['switchCategory',[index]]]]]}}" class="{{['item',[(categoryIndex==index)?'active':'']]}}" bindtap="__e">{{item+"（"+scores[index]+"）"}}</view></block></block></block></view></view></block><block wx:else><view class="comment-empty">该商品暂无评论</view></block><block wx:if="{{scores[0]>0}}"><view class="comment-main"><view class="comment-top"><view class="title">热门评价</view><view class="btn-check"><label data-event-opts="{{[['tap',[['switchOnlyPhotos',['$event']]]]]}}" bindtap="__e"><checkbox checked="{{onlyHasPhotos}}" color="#FF6700"></checkbox><text>只显示带图评价</text></label></view></view><view class="comment-mid"><view class="min-left"><block wx:for="{{$root.l0}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="comment"><view class="top"><image class="avatar _img" src="{{item.$orig.avatarUrl}}"></image><view class="publish-info"><view class="user-name elip">{{item.$orig.userName}}</view><view class="publish-date">{{item.f0}}</view></view><rate class="love" vue-id="{{'07fe47eb-1-'+index}}" score="{{item.$orig.score}}" bind:__l="__l"></rate></view><view class="main"><view class="content">{{item.$orig.content}}</view><block wx:if="{{item.$orig.photoUrls&&item.$orig.photoUrls.length>0}}"><view class="photos"><block wx:for="{{item.$orig.photoUrls}}" wx:for-item="photo" wx:for-index="photoIndex" wx:key="photoIndex"><block><image class="photo" src="{{photo}}" mode="aspectFill" data-event-opts="{{[['tap',[['previewPhoto',['$0'],[[['comments','',index],['photoUrls','',photoIndex]]]]]]]}}" bindtap="__e"></image></block></block></view></block><block wx:if="{{item.$orig.content||item.$orig.photoUrls}}"><view class="{{['like',[(item.$orig.liked)?'active':'']]}}"><view data-event-opts="{{[['tap',[['switchLike',['$0'],[[['comments','',index]]]]]]]}}" class="like-wrap" bindtap="__e"><view class="icon i-like _i"></view><text class="count">{{item.$orig.likes}}</text></view></view></block></view></view></block><block wx:if="{{comments.length==0}}"><view class="comment-empty">暂无评论</view></block><block wx:if="{{!isLastPage}}"><view data-event-opts="{{[['tap',[['loadMore',['$event']]]]]}}" class="btn-more" bindtap="__e">加载更多</view></block></view><view class="min-right"><view class="score-result"><view class="title"><text class="value">{{satisfactions}}</text><text>人购买后满意</text></view><view class="degree"><view class="value" style="{{'width:'+(satisfactionDegree+'%')+';'}}"><block wx:if="{{satisfactionDegree>25}}"><block>{{"满意度："+satisfactionDegree+"%"}}</block></block></view></view></view><block wx:if="{{scrollTop>500}}"><view data-event-opts="{{[['tap',[['goTop',['$event']]]]]}}" class="btn-gotop" bindtap="__e"></view></block></view></view></view></block></view></view>