<view><block wx:if="{{!hasLogin&&showTips}}"><view class="login-notic"><text class="title">为方便您购买，请提前登录</text><view data-event-opts="{{[['tap',[['goLogin',['$event']]]]]}}" class="btn-login" bindtap="__e">立即登录</view><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="icon i-close _i" bindtap="__e"></view></view></block><block wx:if="{{goods.id}}"><view class="goods-wrapper"><view class="wrap"><block wx:if="{{banners.length>0}}"><view class="banner-wrap"><swiper class="banner-swiper vue-ref" current="{{bannerIndex}}" autoplay="{{autoplay}}" indicator-dots="{{true}}" circular="{{true}}" data-ref="banner" data-event-opts="{{[['change',[['bannerChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{banners}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item class="swiper-item"><image class="cover" src="{{item}}" mode="aspectFill"></image></swiper-item></block></swiper><view data-event-opts="{{[['tap',[['switchBanner',[false]]]]]}}" class="btn btn-left" bindtap="__e"><view class="icon i-left _i"></view></view><view data-event-opts="{{[['tap',[['switchBanner',[true]]]]]}}" class="btn btn-right" bindtap="__e"><view class="icon i-right _i"></view></view></view></block><block wx:if="{{magnifier.show}}"><canvas class="magnifier" style="{{'top:'+(magnifier.top+'px')+';'+('left:'+(magnifier.left+'px')+';')}}" canvas-id="magnifier"></canvas></block><view class="goods-main"><view class="goods-name">{{goods.name}}</view><view class="goods-desc">{{goods.introduction}}</view><view class="goods-price">{{currentPrice+"元"}}</view><view class="sku-list"><block wx:for="{{$root.l1}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="sku-wrap"><view class="title">{{"选择"+item.$orig.name}}</view><view class="items"><block wx:for="{{item.l0}}" wx:for-item="attr" wx:for-index="attrIndex" wx:key="attrIndex"><block><view data-event-opts="{{[['tap',[['switchSku',[index,attrIndex]]]]]}}" class="{{['item',[(attrIndex==skuIndexs[index])?'active':'']]}}" bindtap="__e"><block wx:if="{{index==specs.length-1}}"><image class="thumb" src="{{attr.m0}}" mode="aspectFill"></image></block><text class="name elip">{{attr.$orig}}</text></view></block></block></view></view></block></view><view class="current-goods"><view class="goods-info"><view class="name">{{fullName}}</view><view class="price-wrap"><view class="price">{{currentPrice+"元"}}</view><block wx:if="{{originalPrice&&originalPrice>currentPrice}}"><view class="price original">{{originalPrice+"元"}}</view></block></view></view><view class="subtotal">{{"总计："+currentPrice+"元"}}</view></view><view class="btn-wrap"><button data-event-opts="{{[['tap',[['putToCart',['$event']]]]]}}" class="{{['btn-primary',[(sellout)?'disabled':'']]}}" bindtap="__e">{{''+(sellout?'该商品已售罄':'加入购物车')+''}}</button><button data-event-opts="{{[['tap',[['switchLike',['$event']]]]]}}" class="{{['btn-gray',[(liked)?'active':'']]}}" bindtap="__e"><view class="icon i-love _i"></view><text>喜欢</text><view class="icon i-love animation _i"></view></button></view></view></view></view></block><block wx:if="{{goods.id}}"><view class="price-desc"><view class="wrap"><view class="title">价格说明</view><image class="image" src="https://cdn.cnbj1.fds.api.mi-img.com/mi-mall/a482afa34053b1b32ece1023475af7fb.jpeg" mode="aspectFill"></image></view></view></block></view>