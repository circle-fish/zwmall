/* 页面宽度 */
.logo-container, .logo-container .i-home {
  display: flex;
  align-items: center;
}
.logo-container {
  width: 55px;
  overflow: hidden;
  cursor: pointer;
}
.logo-container:hover .i-home {
  margin-left: 0;
}
.logo-container .logo {
  flex-shrink: 0;
  width: 55px;
  height: 55px;
}
.logo-container .i-home {
  flex-shrink: 0;
  font-size: 25px;
  background-color: #ff6700;
  width: 55px;
  height: 55px;
  color: #fff;
  justify-content: center;
  margin-left: -55px;
  transition: all .2s;
}

