.wrapper .wrap .box-header, .wrapper .wrap .box-body .goods-wrapper .goods .prices {
  display: flex;
  align-items: center;
}
.wrapper {
  background-color: #f5f5f5;
}
.wrapper .wrap {
  width: 1226px;
  margin: 0 auto;
}
.wrapper .wrap .box-header {
  justify-content: space-between;
}
.wrapper .wrap .box-header .name {
  font-size: 22px;
  font-weight: 200;
  line-height: 58px;
  color: #333;
}
.wrapper .wrap .box-header .btn-link {
  cursor: pointer;
}
.wrapper .wrap .box-header .btn-link:hover .title {
  color: #ff6700;
}
.wrapper .wrap .box-header .btn-link:hover .icon {
  background-color: #ff6700;
}
.wrapper .wrap .box-header .btn-link .title {
  font-size: 16px;
  line-height: 58px;
  color: #424242;
  transition: all .4s;
}
.wrapper .wrap .box-header .btn-link .icon {
  width: 12px;
  height: 12px;
  padding: 4px;
  margin-left: 8px;
  border-radius: 16px;
  font-size: 12px;
  line-height: 12px;
  background-color: #b0b0b0;
  color: #fff;
  transition: all .4s;
}
.wrapper .wrap .box-body {
  display: flex;
}
.wrapper .wrap .box-body .cover-wrapper {
  width: 234px;
  height: 614px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.wrapper .wrap .box-body .cover-wrapper .cover {
  width: 234px;
  cursor: pointer;
  transition: all .2s linear;
}
.wrapper .wrap .box-body .cover-wrapper .cover:hover {
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  -webkit-transform: translate3d(0, -2px, 0);
          transform: translate3d(0, -2px, 0);
}
.wrapper .wrap .box-body .goods-wrapper {
  width: 992px;
  display: flex;
  flex-wrap: wrap;
}
.wrapper .wrap .box-body .goods-wrapper .goods {
  width: 234px;
  height: 260px;
  padding: 20px 0;
  margin-left: 14px;
  margin-bottom: 14px;
  text-align: center;
  background-color: #ffffff;
  cursor: pointer;
  transition: all .2s linear;
}
.wrapper .wrap .box-body .goods-wrapper .goods:hover {
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  -webkit-transform: translate3d(0, -2px, 0);
          transform: translate3d(0, -2px, 0);
}
.wrapper .wrap .box-body .goods-wrapper .goods .thumb {
  width: 160px;
  height: 160px;
  margin: 0 auto 18px;
}
.wrapper .wrap .box-body .goods-wrapper .goods .name {
  margin: 0 10px 2px;
  font-weight: 400;
  color: #333;
}
.wrapper .wrap .box-body .goods-wrapper .goods .desc {
  height: 18px;
  margin: 0 10px 10px;
  font-size: 12px;
  color: #b0b0b0;
}
.wrapper .wrap .box-body .goods-wrapper .goods .prices {
  justify-content: center;
}
.wrapper .wrap .box-body .goods-wrapper .goods .prices .price-current {
  color: #ff6700;
}
.wrapper .wrap .box-body .goods-wrapper .goods .prices .price-original {
  color: #b0b0b0;
  margin-left: 5px;
  text-decoration: line-through;
}

