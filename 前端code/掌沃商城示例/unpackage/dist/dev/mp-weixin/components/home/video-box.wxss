.wrapper .wrap .box-header, .wrapper .wrap .box-body {
  display: flex;
  align-items: center;
}
.wrapper {
  background-color: #f5f5f5;
  padding-bottom: 20px;
}
.wrapper .wrap {
  width: 1226px;
  margin: 0 auto;
}
.wrapper .wrap .box-header {
  justify-content: space-between;
}
.wrapper .wrap .box-header .name {
  font-size: 22px;
  font-weight: 200;
  line-height: 58px;
  color: #333;
}
.wrapper .wrap .box-header .btn-link {
  cursor: pointer;
}
.wrapper .wrap .box-header .btn-link:hover .title {
  color: #ff6700;
}
.wrapper .wrap .box-header .btn-link:hover .icon {
  background-color: #ff6700;
}
.wrapper .wrap .box-header .btn-link .title {
  font-size: 16px;
  line-height: 58px;
  color: #424242;
  transition: all .4s;
}
.wrapper .wrap .box-header .btn-link .icon {
  width: 12px;
  height: 12px;
  padding: 4px;
  margin-left: 8px;
  border-radius: 16px;
  font-size: 12px;
  line-height: 12px;
  background-color: #b0b0b0;
  color: #fff;
  transition: all .4s;
}
.wrapper .wrap .box-body {
  justify-content: space-between;
}
.wrapper .wrap .box-body .video {
  cursor: pointer;
  width: 296px;
  height: 285px;
  background-color: #ffffff;
  transition: all .2s linear;
}
.wrapper .wrap .box-body .video:hover {
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  -webkit-transform: translate3d(0, -2px, 0);
          transform: translate3d(0, -2px, 0);
}
.wrapper .wrap .box-body .video .cover-wrap {
  position: relative;
  width: 296px;
  height: 180px;
}
.wrapper .wrap .box-body .video .cover-wrap:hover .btn-play {
  background-color: #ff6700;
  border-color: #ff6700;
}
.wrapper .wrap .box-body .video .cover-wrap .cover {
  width: 296px;
  height: 180px;
}
.wrapper .wrap .box-body .video .cover-wrap .btn-play {
  position: absolute;
  left: 20px;
  bottom: 10px;
  width: 32px;
  height: 20px;
  line-height: 18px;
  border: 2px solid #fff;
  border-radius: 12px;
  background-color: rgba(0, 0, 0, 0.6);
  transition: all .2s;
  text-align: center;
}
.wrapper .wrap .box-body .video .cover-wrap .btn-play .icon {
  color: #fff;
  font-size: 13px;
}
.wrapper .wrap .box-body .video .video-info {
  margin-top: 28px;
  text-align: center;
}
.wrapper .wrap .box-body .video .video-info .title {
  margin: 0 14px 6px;
  font-weight: 400;
  color: #333;
}
.wrapper .wrap .box-body .video .video-info .desc {
  height: 18px;
  margin: 0 14px;
  font-size: 12px;
  color: #b0b0b0;
}

