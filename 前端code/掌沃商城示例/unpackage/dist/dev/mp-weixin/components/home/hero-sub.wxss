.container {
  width: 1226px;
  margin: 14px auto 0;
  display: flex;
}
.container .channel-wrap {
  width: 234px;
  height: 170px;
  background-color: #5f5750;
  display: flex;
  flex-wrap: wrap;
}
.container .channel-wrap .channel {
  flex-direction: column;
  justify-content: center;
  width: 78px;
  height: 82px;
  position: relative;
  cursor: pointer;
  opacity: .7;
  transition: opacity .2s;
}
.container .channel-wrap .channel:hover {
  opacity: 1;
}
.container .channel-wrap .channel .thumb {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
}
.container .channel-wrap .channel .name {
  font-size: 12px;
  color: #fff;
}
.container .channel-wrap .channel::before {
  top: 0;
  left: 6px;
  right: 6px;
  border-top: 1px solid #665e57;
}
.container .channel-wrap .channel::after {
  top: 6px;
  bottom: 6px;
  right: 0;
  border-right: 1px solid #665e57;
}
.container .channel-wrap .channel::before, .container .channel-wrap .channel::after {
  position: absolute;
  content: '';
}
.container .promo-wrap {
  margin-left: auto;
  display: flex;
}
.container .promo-wrap .promo {
  width: 316px;
  height: 170px;
  margin-right: 15px;
  transition: box-shadow .2s;
}
.container .promo-wrap .promo:last-child {
  margin-right: 0;
}
.container .promo-wrap .promo:hover {
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
}
.container .promo-wrap .promo .cover {
  width: 316px;
  height: 170px;
}

