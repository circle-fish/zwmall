/* 页面宽度 */
.form-wrap .form-item {
  display: flex;
  align-items: center;
}
.form-wrap {
  width: 100%;
  margin: 0 20px;
  padding: 30px 40px 0;
  border-top: 1px solid #e0e0e0;
}
.form-wrap .form-item-title {
  font-size: 15px;
  color: #555;
  font-weight: bold;
  line-height: 30px;
}
.form-wrap .form-item {
  margin-bottom: 10px;
}
.form-wrap .form-item input {
  flex: 1;
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
  color: #333;
  border: 1px solid #e8e8e8;
}
.form-wrap .form-item .captcha {
  width: 125px;
  height: 42px;
  margin-left: 15px;
  cursor: pointer;
}

