.cropper-wrap {
  display: flex;
  align-items: center;
}
.cropper-wrap {
  width: 100%;
  margin: 0 20px;
  border-top: 1px solid #e0e0e0;
  justify-content: center;
}
.cropper-wrap .canvas-image {
  position: relative;
  width: 300px;
  height: 300px;
  background-color: #000000;
}
.cropper-wrap .canvas-cropper {
  z-index: 2;
  position: absolute;
  width: 300px;
  height: 300px;
  cursor: move;
}

