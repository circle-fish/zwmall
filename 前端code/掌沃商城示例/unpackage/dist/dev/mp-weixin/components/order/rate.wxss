.rate-wrapper {
  display: flex;
  align-items: center;
}
.name {
  margin-right: 15px;
  font-weight: bold;
  color: #333;
}
.rate-wrapper .rate-wrap {
  position: relative;
  margin-right: 5px;
}
.rate-wrapper .rate-wrap .icon {
  font-size: 20px;
  color: #999;
  cursor: pointer;
}
.rate-wrapper .rate-wrap .icon.disabled {
  cursor: default;
}
.rate-wrapper .rate-wrap .icon.active {
  color: #ff6700;
}
.rate-wrapper .rate-wrap .active-wrap {
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
}
.rate-wrapper .score {
  margin-left: 5px;
  color: #333;
}

