.wrapper {
  background-color: #ffffff;
}
.wrapper .wrap {
  width: 1226px;
  margin: 0 auto;
  display: flex;
  min-height: 60px;
  position: relative;
}
.wrapper .wrap.separator {
  border-top: 1px solid #e0e0e0;
}
.wrapper .wrap .label {
  color: #b0b0b0;
  min-width: 124px;
  line-height: 60px;
}
.wrapper .wrap .list {
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
  transition: height .3s ease-in;
}
.wrapper .wrap .list .item {
  width: 149px;
  height: 60px;
  line-height: 60px;
}
.wrapper .wrap .list .item .name {
  max-width: 145px;
  display: inline-block;
  color: #424242;
  cursor: pointer;
}
.wrapper .wrap .list .item .name.active, .wrapper .wrap .list .item .name:hover {
  color: #ff6700;
}
.wrapper .wrap .btn-more {
  line-height: 60px;
  cursor: pointer;
  color: #757575;
  flex-shrink: 0;
}
.wrapper .wrap .btn-more .icon {
  display: inline-block;
  font-size: 12px;
  font-weight: bold;
  color: #cccccc;
  margin-left: 4px;
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
  transition: -webkit-transform .3s;
  transition: transform .3s;
  transition: transform .3s, -webkit-transform .3s;
}
.wrapper .wrap .btn-more .icon.active {
  -webkit-transform: rotate(-90deg);
          transform: rotate(-90deg);
}

